{{> trainermenu id="trainerdashboard"}}

{{>trainermembergoals}}

<div class="ui raised segment">
    <div class="ui three column center aligned grid">
        <div class="middle aligned row">
            <div class="column">
                <div class="ui icon header">
                    <i class="user icon"></i>
                    {{member.name}}
                    Height: {{member.height}}
                </div>
            </div>
            <div class="column">
                <div class="ui icon header">
                    <i class="heartbeat icon"></i>
                    BMI: {{bmi}}
                </div>
            </div>
            <div class="column">
                <div class="ui icon header">
                    <i class="medkit icon"></i>
                    {{category}}
                </div>
            </div>
        </div>
    </div>
</div>


<section class="ui raised segment">
    <header class="ui header">
        Assessment List
    </header>

    {{#each assessments}}
    <table class="ui fixed table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Weight</th>
            <th>Chest</th>
            <th>Thigh</th>
            <th>Upper Arm</th>
            <th>Waist</th>
            <th>Hips</th>
            <th>Trend</th>
            <th>Comment</th>
        </tr>
        </thead>
        <tbody>
        <div class="ui bulleted list">
            <tr>
                <td> {{date}} </td>
                <td> {{weight}} </td>
                <td> {{chest}} </td>
                <td> {{thigh}} </td>
                <td> {{upperArm}} </td>
                <td> {{waist}} </td>
                <td> {{hips}} </td>
                <td><i class="big {{trend}} chart line icon"></i></td></td>
                <td> {{comment}} </td>
        </div>
        </tbody>
    </table>
                <form class="ui form" action="/trainermemberdashboard/updatecomment/{{id}}" method="POST">
                    <div class="field">
                        <label>Comment</label>
                        <input placeholder="Comment" type="text" name="comment">
                    </div>
                    <button class="ui blue submit button">Update</button>
                </form>
    {{/each}}


</section>

