  <header class="ui header">
    Assessment List
  </header>
  <table class="ui fixed table">
    <thead>
    <tr>
      <th>Date</th>
      <th>Weight</th>
      <th>Chest</th>
      <th>Thigh</th>
      <th>Upper Arm</th>
      <th>Waist</th>
      <th>Hips</th>
      <th>Trend</th>
      <th>Comment</th>
      <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    <div class="ui bulleted list">
      {{#each assessments}}
      <tr>
        <td> {{date}} </td>
        <td> {{weight}} </td>
        <td> {{chest}} </td>
        <td> {{thigh}} </td>
        <td> {{upperArm}} </td>
        <td> {{waist}} </td>
        <td> {{hips}} </td>
        <td> <i class="big {{trend}} chart line icon"></i></td>
        <td> {{comment}}</td>
        <td> <a href="/dashboard/deleteAssessment/{{id}}"> <i class="big trash alternate outline icon"></i> </a> </td>
      {{/each}}
    </div>
    </tbody>
  </table>
